doctype
-
	var converters = [
		'Text (UTF-8)',
		'Hex',
		'Binary',
		'Base64',
		'ROT13',
		'UTF-16',
		'Unicode',
		'punycode',
	];
	
	var js = function (file) {
		if (debug) {
			return file + '.js';
		} else {
			return file + '.min.js';
		}
	}
html
	head
		title Sugoi Converter
		script(src = js('index'))
	body
		h1 Sugoi Converter
		.converters
			each converter in converters
				- var slug = converter.replace(/\(.+?\)/g, '').replace(/\W/g, '').toLowerCase();
				.converter(class=slug)
					h2.label= converter
					textarea.textarea(data-converter=slug)
					p.error
